#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/ext_power.h>

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3
#define MOUSE 4

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        adjust_layer {
            if-layers = <LOWER RAISE>;
            then-layer = <ADJUST>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            bindings = <
                &kp GRAVE &kp N1 &kp N2 &kp N3 &kp N4 &kp N5
                &kp N6 &kp N7 &kp N8 &kp N9 &kp N0 &none

                &trans &kp Q &kp W &kp E &kp R &kp T
                &kp Y &kp U &kp I &kp O &kp P &kp BSPC

                &kp TAB &kp A &kp S &kp D &kp F &kp G
                &kp H &kp J &kp K &kp L &kp SEMI &kp SQT

                &kp LSHIFT &kp Z &kp X &kp C &kp V &kp B
                &trans &trans &kp N &kp M &kp COMMA &kp DOT &kp SLASH &kp RSHIFT

                &kp LGUI &kp LALT &kp LCTRL &mo LOWER &kp ENTER
                &kp SPACE &mo RAISE &kp RCTRL &kp RALT &kp RGUI
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {
            display-name = "Lower";
            bindings = <
                &trans &kp F1 &kp F2 &kp F3 &kp F4 &kp F5
                &kp F6 &kp F7 &kp F8 &kp F9 &kp F10 &kp F11

                &kp GRAVE &kp N1 &kp N2 &kp N3 &kp N4 &kp N5
                &kp N6 &kp N7 &kp N8 &kp N9 &kp N0 &kp F12

                &trans &kp EXCL &kp AT &kp HASH &kp DLR &kp PERCENT
                &kp CARET &kp AMPERSAND &kp ASTERISK &kp LEFT_PAREN &kp RIGHT_PAREN &kp PIPE

                &trans &kp EQUAL &kp MINUS &kp PLUS &kp LEFT_BRACKET &kp RIGHT_BRACKET
                &trans &trans &kp LEFT_CURLY_BRACE &kp RIGHT_CURLY_BRACE &kp SEMICOLON &kp COLON &kp BACKSLASH &trans

                &trans &trans &trans &trans &trans
                &trans &trans &trans &trans &trans
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
            display-name = "Raise";
            bindings = <
                &bt BT_CLR &bt BT_SEL_0 &bt BT_SEL_1 &bt BT_SEL_2 &bt BT_SEL_3 &bt BT_SEL_4
                &trans &trans &trans &trans &trans &trans

                &trans &kp INS &kp PSCREEN &kp MENU &trans &trans
                &kp PAGE_UP &trans &kp UP &trans &kp N0 &trans

                &trans &kp LALT &kp LCTRL &kp LSHIFT &trans &kp CAPS_LOCK
                &kp PAGE_DOWN &kp LEFT &kp DOWN &kp RIGHT &kp DEL &kp BSPC

                &trans &kp UNDO &kp CUT &kp COPY &kp PASTE &trans
                &trans &trans &trans &trans &trans &trans

                &trans &trans &trans &trans &trans
                &trans &trans &trans &trans &trans
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        adjust_layer {
            display-name = "Adjust";
            bindings = <
                &bt BT_CLR &bt BT_SEL_0 &bt BT_SEL_1 &bt BT_SEL_2 &bt BT_SEL_3 &bt BT_SEL_4
                &to MOUSE &none &none &none &none &none

                &ext_power EP_TOG &rgb_ug RGB_HUD &rgb_ug RGB_HUI &rgb_ug RGB_SAD &rgb_ug RGB_SAI &rgb_ug RGB_EFF
                &none &none &none &none &none &none

                &none &rgb_ug RGB_BRD &rgb_ug RGB_BRI &none &none &none
                &none &none &none &none &none &none

                &none &none &none &none &none &none
                &rgb_ug RGB_TOG &none &none &none &none &none

                &none &none &none &none &none &none
                &none &none &none &none &none
            >;
        };

        mouse_layer {
            display-name = "Mouse";
            bindings = <
                &trans &trans &trans &trans &trans &trans
                &msc BTN_LEFT &msc BTN_RIGHT &msc MS_UP &msc MS_DOWN &trans &to BASE

                &trans &kp BTN1 &mmv UP &kp BTN2 &trans &trans
                &trans &trans &trans &trans &trans &trans

                &trans &mmv LEFT &mmv DOWN &mmv RIGHT &trans &trans
                &trans &trans &trans &trans &trans &trans

                &trans &trans &trans &trans &trans &trans
                &trans &trans &trans &trans &trans &trans

                &trans &trans &trans &trans &trans &trans
                &trans &trans &trans &trans &trans
            >;
            sensor-bindings = <&inc_dec_scroll_y &inc_dec_scroll_y>;
        };
    };
};
